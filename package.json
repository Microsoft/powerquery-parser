{
    "name": "@microsoft/powerquery-parser",
    "version": "0.1.42",
    "description": "A parser for the Power Query/M formula language.",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "keywords": [
        "power query",
        "power bi"
    ],
    "dependencies": {
        "grapheme-splitter": "^1.0.4"
    },
    "devDependencies": {
        "@types/chai": "^4.2.3",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.7.9",
        "chai": "^4.2.0",
        "mocha": "^6.2.1",
        "mocha-junit-reporter": "^1.23.1",
        "mocha-multi-reporters": "^1.1.7",
        "performance-now": "^2.1.0",
        "prettier": "^2.0.4",
        "ts-loader": "^6.2.0",
        "ts-node": "^8.4.1",
        "tslint": "^5.20.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-microsoft-contrib": "^6.2.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.8.2"
    },
    "files": [
        "lib/common/*",
        "lib/inspection/*",
        "lib/lexer/*",
        "lib/localization/*",
        "lib/parser/*",
        "lib/test/*",
        "lib/type/*",
        "lib/index.d.ts",
        "lib/index.js",
        "lib/index.js.map",
        "lib/settings.d.ts",
        "lib/settings.js",
        "lib/settings.js.map",
        "lib/task.d.ts",
        "lib/task.js",
        "lib/task.js.map"
    ],
    "scripts": {
        "build": "node_modules\\.bin\\tsc",
        "test": "mocha --reporter mocha-multi-reporters --reporter-options configFile=src/test/mochaConfig.json -r ts-node/register src/test/libraryTest/**/*.ts",
        "test:resources": "mocha --reporter mocha-multi-reporters --reporter-options configFile=src/test/mochaConfig.json -r ts-node/register src/test/resourceTest/**/*.ts",
        "check": "node_modules\\.bin\\prettier --config \".prettierrc\" --list-different src\\**\\*.ts",
        "prepublishOnly": "git clean -xdf && npm install && npm run check && npm run build && npm run test && npm run test:resources"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/microsoft/powerquery-parser.git"
    },
    "author": "Microsoft",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/microsoft/powerquery-parser/issues"
    },
    "homepage": "https://github.com/microsoft/powerquery-parser#readme"
}
